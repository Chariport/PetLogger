<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".weight_log_entry"
    android:background="@drawable/weight_log_background">

    <TextView
        android:id="@+id/date"
        android:layout_width="142dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/createpet_edittextbackground"
        android:focusable="false"
        android:fontFamily="@font/heebo_light"
        android:hint="@string/hintClick"
        android:imeOptions="actionDone"
        android:paddingHorizontal="40dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hintcolor"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/Date"
        app:layout_constraintTop_toBottomOf="@+id/edittextWeight" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/cancelbutton"
        android:clickable="true"
        android:onClick="cancelBackToWeightLog"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/petName2"
        android:layout_width="302dp"
        android:layout_height="47dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="12dp"
        android:text="Louis' New Weight"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/heebo_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/petName3"
        android:layout_width="106dp"
        android:layout_height="47dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="232dp"
        android:text="Weight:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/heebo_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/petName5"
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:layout_marginTop="232dp"
        android:text="grams"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/heebo_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="88dp"
        android:layout_height="47dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="Date:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/heebo_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petName3" />

    <EditText
        android:id="@+id/edittextWeight"
        android:layout_width="142dp"
        android:layout_height="44dp"
        android:layout_alignStart="@+id/edittext_birthdate"
        android:layout_alignEnd="@+id/edittext_birthdate"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/createpet_edittextbackground"
        android:fontFamily="@font/heebo_light"
        android:hint="@string/hintClick"
        android:inputType="numberDecimal"
        android:paddingHorizontal="40dp"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:textColorHint="@color/hintcolor"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/petName5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/petName3"
        app:layout_constraintTop_toBottomOf="@+id/petName2" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="318dp"
        android:layout_height="73dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/savebutton"
        android:clickable="true"
        android:onClick="saveBackToWeightLog"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>