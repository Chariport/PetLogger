<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".weight_log_entry"
    android:background="@drawable/weight_log_background">

    <TextView
        android:id="@+id/date"
        android:layout_width="217dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/createpet_edittextbackground"
        android:focusable="false"
        android:fontFamily="@font/heebo_light"
        android:hint="@string/hintClick"
        android:imeOptions="actionDone"
        android:paddingHorizontal="40dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hintcolor"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextWeight" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/cancelbutton"
        android:clickable="true"
        android:onClick="cancelBackToWeightLog"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/petNameTextView"
        android:layout_width="320dp"
        android:layout_height="63dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="12dp"
        android:text="Louis' New Weight"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35sp"
        android:textStyle="bold"
        app:fontFamily="@font/heebo_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/petName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="232dp"
        android:text="Weight (g):"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/heebo_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:text="Date:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/heebo_light"
        app:layout_constraintEnd_toStartOf="@+id/date"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petName3" />

    <EditText
        android:id="@+id/edittextWeight"
        android:layout_width="146dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/createpet_edittextbackground"
        android:fontFamily="@font/heebo_light"
        android:hint="@string/hintClick"
        android:inputType="numberDecimal"
        android:paddingHorizontal="40dp"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:textColorHint="@color/hintcolor"
        android:textSize="27sp"
        app:layout_constraintStart_toEndOf="@+id/petName3"
        app:layout_constraintTop_toBottomOf="@+id/petNameTextView" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="318dp"
        android:layout_height="73dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/savebutton"
        android:clickable="true"
        android:onClick="saveBackToWeightLog"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>