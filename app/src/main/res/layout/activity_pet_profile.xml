<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pet_profile"
    android:background="@drawable/main_activity_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="103dp"
                android:layout_height="50dp"
                android:background="@drawable/backbutton"
                android:textColor="@color/colorPrimaryDark" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/editButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_button"
                android:clickable="true"
                android:onClick="editTextViews"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pet"
                android:layout_width="match_parent"
                android:layout_height="1171dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="130dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/pet_profile_card" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="330dp"
                android:text="Age:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/nameEditTextView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="193dp"
                android:layout_marginTop="250dp"
                android:imeOptions="actionDone"
                android:text="Louis"
                android:textAlignment="center"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/ageEditTextView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="193dp"
                android:layout_marginTop="318dp"
                android:clickable="true"
                android:text="2 yrs"
                android:textAlignment="center"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="260dp"
                android:text="Name:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="400dp"
                android:text="Last Fed:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/lastShedEditTextView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView19"
                android:layout_alignParentStart="true"
                android:layout_marginStart="193dp"
                android:layout_marginTop="-10dp"
                android:imeOptions="actionDone"
                android:text="10/23/2018"
                android:textAlignment="center"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/sexTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="610dp"
                android:text="Sex:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/morphTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="680dp"
                android:text="Morph:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="32sp" />

            <Spinner
                android:id="@+id/sexSpinner"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="193dp"
                android:layout_marginTop="608dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/morphEditTextView"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="734dp"
                android:imeOptions="actionDone"
                android:text="Albino Ball Python"
                android:textAlignment="center"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="470dp"
                android:text="Weight:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/weightEditTextView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView15"
                android:layout_alignParentStart="true"
                android:layout_marginStart="193dp"
                android:layout_marginTop="-54dp"
                android:imeOptions="actionDone"
                android:text="1500 g"
                android:textAlignment="center"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="540dp"
                android:text="Last Shed:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="32sp" />

            <ImageView
                android:id="@+id/weightGraph"
                android:layout_width="308dp"
                android:layout_height="231dp"
                android:layout_below="@+id/morphEditTextView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="58dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="45dp"
                android:cropToPadding="true"
                app:srcCompat="@drawable/weight_graph" />

            <Button
                android:id="@+id/viewWeightLogButton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="325dp"
                android:layout_height="56dp"
                android:layout_below="@+id/weightGraph"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="44dp"
                android:background="@drawable/weight_log_button"
                android:clickable="true"
                android:onClick="viewWeightLog"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/notesHeader"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewWeightLogButton"
                android:layout_alignParentStart="true"
                android:layout_marginStart="37dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="0dp"
                android:text="Notes:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <ScrollView
                android:id="@+id/notesScrollView"
                android:layout_width="321dp"
                android:layout_height="228dp"
                android:layout_below="@+id/notesHeader"
                android:layout_alignParentStart="true"
                android:layout_marginStart="37dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="86dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/notesTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/notesHeader"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque rhoncus lacus ac sem facilisis dapibus. Aenean enim augue, tristique eget tincidunt ut, dictum at justo. Aliquam pharetra velit dui, ut pharetra tellus consequat sit amet. Aliquam vitae bibendum dui, et scelerisque lacus. Mauris ut pulvinar ligula. Donec facilisis tortor id ante tristique, a accumsan neque dapibus. Aenean magna tortor, finibus ac sodales ac, dignissim at elit. Curabitur in interdum ante, ut mattis massa." />
                </LinearLayout>
            </ScrollView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicture"
                android:layout_width="232dp"
                android:layout_height="232dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="93dp"
                android:layout_marginTop="24dp"
                android:scaleType="centerCrop" />

            <EditText
                android:id="@+id/lastFedEditTextView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="193dp"
                android:layout_marginTop="389dp"
                android:imeOptions="actionDone"
                android:text="10/23/2018"
                android:textAlignment="center"
                android:textSize="32sp" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>